<div id="main-panel">
  <div id="service-panel" {{bind-attr class=":chat-widget shouldChatStick:stick :video-holder :on-queue :customer" }}>
      <div class="subscriber"></div>
      <div class="publisher"></div>

      <div class="col-md-12 cw-actions">
        <a class="btn btn-record" title="Start Recording"><img src="/images/recordpressed.png"/></a>
        <a class="btn btn-record-stop" title="Stop Recording"><div class="red-square"></div></a>
        <a class="btn btn-chat"><img src="/images/icon_Chat.png" {{action 'toggleChat'}}></img></a>
        <a class="btn btn-danger end-call">End Call</a>
      </div>


      <div id="text-panel">
        <div id="chat-collapse" class="panel panel-default">
            <div class="panel-heading">
              <h5>Text chat</h5>
              <a {{action 'toggleChat'}} class="floatRight">&times;</a>
            </div>
            <div class="panel-body">
                <div class="text-chat">
                  <ul class="messages"></ul>
                </div>
            </div>
            <div class="new-message">
              <input type="text" class="form-control message-text" name="new-message" placeholder="Send a text">
            </div>
        </div>
      </div>


      <div class="bottom-bar">
          <button type="button" class="btn btn-large btn-danger close-button">Cancel call</button>
      </div>
      <div class="waiting">
          <p class="hardware-access">Please allow access to your camera and mic.</p>
          <div class="representative">
            <p>In the queue</p>
            <p class="big">2 min</p>
            <p class="small">Aprox wait</p>
          </div>
      </div>
  </div>
</div>
